<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3001.honda.MainActivity">

        <TextView
            android:id="@+id/textView2"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Pembelian Motor Honda" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:src="@drawable/honda" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNama"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:hint="Nama" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextAlamat"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:hint="Alamat" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textViewProvinsi"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:background="@color/material_deep_teal_500"
            android:text="Asal Provinsi Pemesan" />

        <Spinner
            android:id="@+id/spinnerPemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Provinsi" />

        <TextView
            android:id="@+id/textViewType"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:background="@color/material_deep_teal_500"
            android:text="Type Motor" />

        <RadioGroup
            android:id="@+id/radioGroupType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Sport" />

            <RadioButton
                android:id="@+id/radioButtonU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Underbone" />

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Matic" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewBonus"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Bonus" />

        <CheckBox
            android:id="@+id/checkBoxH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Helm" />

        <CheckBox
            android:id="@+id/checkBoxJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Jaket" />

        <CheckBox
            android:id="@+id/checkBoxJH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Jas Hujan" />

        <Button
            android:id="@+id/buttonOK"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbtn"
            android:text="OK"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

    </LinearLayout>

</ScrollView>